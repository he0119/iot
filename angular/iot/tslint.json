{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "tslint-angular"
  ],
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "foo",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "foo",
      "kebab-case"
    ],
    "use-view-encapsulation": false,
    "prefer-template": true
  }
}
