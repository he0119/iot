{
  "openapi": "3.0.2",
  "info": {
    "title": "IOT",
    "description": "This is a simple iot server.",
    "contact": {
      "name": "hemengyang",
      "email": "hmy0119@gmail.com",
      "url": "https://hehome.tk"
    },
    "license": {
      "name": "MIT",
      "url": "https://mit-license.org/"
    },
    "version": "0.3.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:5000/api",
      "description": "Development server"
    },
    {
      "url": "https://hehome.tk/api",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "type": "http",
      "scheme": "basic"
    }
  ],
  "components": {
    "schemas": {
      "GeneralError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Device": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "schema": {
            "type": "object"
          },
          "createOn": {
            "type": "string",
            "format": "date-time"
          },
          "lastConnectOn": {
            "type": "string",
            "format": "date-time"
          },
          "offlineOn": {
            "type": "string",
            "format": "date-time"
          },
          "onlineStatus": {
            "type": "boolean"
          }
        }
      },
      "Status": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "time": {
            "type": "string",
            "format": "date-time"
          },
          "data": {
            "type": "object"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "example": {
          "username": "example",
          "email": "example@example.com"
        }
      }
    },
    "responses": {
      "NotFound": {
        "description": "Entity not found."
      },
      "IllegalInput": {
        "description": "Illegal input for operation."
      },
      "Unauthorized": {
        "description": "Do not have proper credentials",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GeneralError"
            }
          }
        }
      },
      "GeneralError": {
        "description": "General Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GeneralError"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "users"
        ],
        "description": "Get login user info",
        "operationId": "getLoginUserInfo",
        "responses": {
          "200": {
            "description": "Current login user info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "post": {
        "tags": [
          "users"
        ],
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "username",
                  "password",
                  "email"
                ],
                "properties": {
                  "username": {
                    "description": "Username",
                    "type": "string"
                  },
                  "password": {
                    "description": "Password",
                    "type": "string",
                    "format": "password"
                  },
                  "email": {
                    "description": "Email",
                    "type": "string"
                  }
                },
                "example": {
                  "username": "example",
                  "password": "example",
                  "email": "example@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Username or Email already exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralError"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "put": {
        "tags": [
          "users"
        ],
        "description": "Modify user info",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "username",
                  "password",
                  "email"
                ],
                "properties": {
                  "username": {
                    "description": "Username",
                    "type": "string"
                  },
                  "password": {
                    "description": "Password",
                    "type": "string",
                    "format": "password"
                  },
                  "email": {
                    "description": "Email",
                    "type": "string"
                  }
                },
                "example": {
                  "username": "example",
                  "password": "example",
                  "email": "example@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User info updated"
          },
          "400": {
            "description": "Email already exist"
          }
        }
      },
      "delete": {
        "tags": [
          "users"
        ],
        "description": "Delete user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "required": [
                "username"
              ],
              "properties": {
                "username": {
                  "description": "Username",
                  "type": "string"
                }
              },
              "example": {
                "username": "example"
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "User deleted"
          }
        }
      }
    }
  }
}
